{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true,
        "jasmine": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
      "require": true,
      "monaco": true,
      "editor": true,
      "editable": true
    }
}

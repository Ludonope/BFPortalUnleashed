{
    "name": "Portal Unleashed",
    "version": "1.1.1",
    "description": "A Battlefield Portal scripting tool",
    "author": "Ludonope",
    "homepage_url": "https://github.com/Ludonope/BFPortalUnleashed",
    "offline_enabled": true,
    "background": {
        "scripts": [
            "background/background.js"
        ]
    },
    "page_action": {
        "default_icon": "images/portal_unchained_icon.png",
        "default_title": "Portal Unleashed"
    },
    "content_scripts": [{
        "js": [
            "content/content.js"
        ],
        "matches": [
            "https://portal.battlefield.com/*"
        ],
        "run_at": "document_end"
    }],
    "permissions": [
        "contextMenus",
        "downloads",
        "notifications",
        "storage",
        "webRequest",
        "tabs",
        "<all_urls>"
    ],
    "icons": {
        "128": "images/portal_unchained_logo.png"
    },
    "web_accessible_resources": [
        "editor/*",
        "lib/*"
    ],
    "content_security_policy": "script-src 'self' blob: filesystem:",
    "manifest_version": 2
}